<h1>Listing place_infos</h1>

<table border="1" cellspacing="0">
  <thead>
    <tr>
      <th rowspan="2">Place kind</th>
      <th rowspan="2">Place no</th>
      <th rowspan="2">Place name</th>
      <th colspan="3">open time</th>
      <th rowspan="2">Place info</th>
      <th rowspan="2"></th>
      <th rowspan="2"></th>
      <th rowspan="2"></th>
    </tr>
    <tr>
      <th>workday</th>
      <th>weekend</th>
      <th>holiday</th>
    </tr>
  </thead>

  <tbody>
    <% @place_infos.each do |place_info| %>
      <tr>
        <td rowspan="3"><%= PlaceInfo::PLACE_KIND[place_info.place_kind] %></td>
        <td rowspan="3"><%= place_info.place_no %></td>
        <td rowspan="3"><%= place_info.place_name %></td>
        <td align="center"><%= place_info.place_workday_start1 %>~<%= place_info.place_workday_end1 %></td>
        <td align="center"><%= place_info.place_weekend_start1 %>~<%= place_info.place_weekend_end1 %></td>
        <td align="center"><%= place_info.place_holiday_start1 %>~<%= place_info.place_holiday_end1 %></td>
        <td rowspan="3"><%= place_info.place_info %></td>
        <td rowspan="3"><%= link_to 'Show', place_info %></td>
        <td rowspan="3"><%= link_to 'Edit', edit_place_info_path(place_info) %></td>
        <td rowspan="3"><%= link_to 'Destroy', place_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td align="center"><%= place_info.place_workday_start2 %>~<%= place_info.place_workday_end2 %></td>
        <td align="center"><%= place_info.place_weekend_start2 %>~<%= place_info.place_weekend_end2 %></td>
        <td align="center"><%= place_info.place_holiday_start2 %>~<%= place_info.place_holiday_end2 %></td>
      </tr>
      <tr>
        <td align="center"><%= place_info.place_workday_start3 %>~<%= place_info.place_workday_end3 %></td>
        <td align="center"><%= place_info.place_weekend_start3 %>~<%= place_info.place_weekend_end3 %></td>
        <td align="center"><%= place_info.place_holiday_start3 %>~<%= place_info.place_holiday_end3 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place info', new_place_info_path %>
